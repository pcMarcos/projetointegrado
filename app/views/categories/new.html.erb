<div class="container">
  <div class="row justify-content-around">
  <div class="col-4">
    <h3> Criar categoria </h3>
    <%= form_with(model: @category, url: categories_path) do |f| %>
      <div class="card">
        <div class="card-body">
          <div class="mb-3">
            <%= f.label :nome, { class: "form-label"} %>
            <%= f.text_field :name, { class: "form-control", placeholder: "Nome da categoria" } %>
          </div>
          <%= f.submit "Criar categoria", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    </div>
    <%= render "categories/show" %>
  </div>
</div>
