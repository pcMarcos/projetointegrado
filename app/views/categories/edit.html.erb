<div class="container">
  <div class="row">
    <div class="col-4">
      <h3> Editar categoria </h3>
      <%= form_for @category do |f| %>
        <div class="card">
          <div class="card-body">
            <div class="mb-3">
              <%= f.label :nome, { class: "form-label"} %>
              <%= f.text_field :name, { class: "form-control", placeholder: "Nome da categoria" } %>
            </div>
            <%= f.submit "Atualizar categoria", class: "btn btn-outline-dark" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="d-inline-flex p-2">
    <%= link_to 'Voltar', categories_path, class: 'btn btn-outline-dark'  %>
  </div>
</div>
