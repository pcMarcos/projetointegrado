<div class="container">
  <div class="row">
    <div class="col-4">
      <h3> Editar Limite </h3>
      <%= form_for @limit do |f| %>
        <% if @limit.errors.any? %>
          <ul>
            <% @limit.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="card">
          <div class="card-body">
            <div class="mb-3">
              <%= f.label :nome, { class: "form-label"} %>
              <%= f.text_field :name, { class: "form-control", placeholder: "Nome do limite" } %>
            </div>
            <div class="mb-3">
              <%= f.label :valor, { class: "form-label"} %>
              <%= f.text_field :value, { class: "form-control", placeholder: "Valor do limite" } %>
            </div>
            <div class="mb-3">
              <%= f.label :categoria, { class: "form-label"} %>
              <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), {}, { class: "form form-group form-control" } %>
            </div>
            <%= f.submit "Atualizar limite", class: "btn btn-outline-dark" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="d-inline-flex p-2">
    <%= link_to 'Voltar', limits_url, class: 'btn btn-outline-dark'  %>
  </div>
</div>
