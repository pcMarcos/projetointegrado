<div class="container">
  <div class="col-4 mb-4">
    <%= link_to 'Voltar', :back, class: 'btn btn-outline-dark'  %>
    <a href= <%= general_expenses_path %> class="btn btn-outline-dark mt-auto" > Listar despesas </a>
  </div>
  <div class="row justify-content-around">
    <div class="col-4">
      <h5> Criar despesa </h5>
      <%= form_with(model: @expense, url: expenses_path) do |f| %>
        <% if @expense.errors.any? %>
          <ul>
            <% @expense.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="card">
          <div class="card-body">
            <div class="mb-3">
              <%= f.label :nome, { class: "form-label"} %>
              <%= f.text_field :name, { class: "form-control", placeholder: "Nome da despesa" } %>
            </div>
            <div class="mb-3">
              <%= f.label :valor, { class: "form-label"} %>
              <%= f.text_field :value, { class: "form-control", placeholder: "Valor da despesa" } %>
            </div>
            <div class="mb-3">
              <%= f.label :categoria, { class: "form-label"} %>
              <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), {}, { class: "form form-group form-control" } %>
            </div>
            <div class="mb-3">
              <%= f.label :descrição, { class: "form-label"} %>
              <%= f.text_area :description, { class: "form-control", placeholder: "Descrição" } %>
            </div>
            <%= f.submit "Criar despesa", class: "btn btn-outline-dark" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-8">
      <img src= <%= image_path("dashboard.png") %> class="rounded mx-auto d-block" alt="Responsive image"  style="max-width: 60%;">
    </div>
  </div>
</div>
<div class="container" style="margin-top: 70px">
  <div class="row">
    <div class="col">
      <div class="card" style="width: 28rem;  height: 13rem;">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">Gerenciar Categorias</h5>
          <p class="card-text">Liste e crie novas categorias de despesas de acordo com suas necessidades</p>
          <%= link_to 'Gerenciar Categorias', new_category_path, class: 'btn btn-outline-dark mt-auto' %>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card" style="width: 28rem;  height: 13rem;">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">Gerenciar Limites</h5>
          <p class="card-text">Confira seus limites personalizados e crie novos por categoria</p>
          <%= link_to 'Gerenciar Limites', new_limit_path, class: 'btn btn-outline-dark mt-auto' %>
        </div>
      </div>
    </div>
  </div>
</div>
