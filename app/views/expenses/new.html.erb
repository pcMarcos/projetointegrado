<div class="container">
  <div class="container">
    <div class="row" style="width: 18rem;">
      <div class="col">
        <h5> Criar despesa </h5>
        <%= form_with(model: @expense, url: expenses_path) do |f| %>
          <div class="card">
            <div class="card-body">
              <div class="mb-3">
                <%= f.label :nome, { class: "form-label"} %>
                <%= f.text_field :name, { class: "form-control", placeholder: "Nome da despesa" } %>
              </div>
              <div class="mb-3">
                <%= f.label :valor, { class: "form-label"} %>
                <%= f.text_field :value, { class: "form-control", placeholder: "Valor da despesa" } %>
              </div>
              <div class="mb-3">
                <%= f.label :descrição, { class: "form-label"} %>
                <%= f.text_field :description, { class: "form-control", placeholder: "Descrição" } %>
              </div>
              <%= f.submit "Criar despesa", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <% @expenses.each do |post| %>
      <div class="col-md-4">
        <h1><%= post.name %></h1>
        <p><%= post.value %></p>
        <br>
      </div>
    <% end %>
  </div>
